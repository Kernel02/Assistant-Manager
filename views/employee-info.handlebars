{{! employee-info.handlebars }}
<div class="center-align">
  <h2>Employee Information</h2>

  <div id="employee-info" class="center-align">
    {{#each employees}}
      <div class="card">
        <div class="card-content">
          <h2>{{first_name}} {{last_name}}</h2>
        </div>
        <div class="card-tabs">
          <ul class="tabs">
            <li class="tab"><a href="#{{id}}role">Role</a></li>
            <li class="tab"><a class="active" href="#{{id}}info">Personal
                Information</a></li>
          </ul>
        </div>
        <div class="card-content grey lighten-4">
          <div id="{{id}}role">
            <p><strong>Role:</strong> {{role.description}}</p>
            <p><strong>Salary:</strong> {{role.salary}}</p>
          </div>
          <div id="{{id}}info">
            <p><strong>Email:</strong> {{email}}</p>
            <p><strong>Phone:</strong> {{phone}}</p>
            <p><strong>Address:</strong> {{address}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
  <div class="divider"></div>
  <ul id="tabs-swipe-demo" class="tabs">
    <li class="tab col s3"><a href="#addEmployee">Add Employee</a></li>
    <li class="tab col s3"><a class="active" href="#roles">Manage Roles</a></li>
  </ul>
  <div id="addEmployee">
    <div class="center-align card-panel">
      <form>
        <div class="input-field">
          <input id="first_name" type="text" class="validate" />
          <label for="first_name">First Name</label>
        </div>
        <div class="input-field">
          <input id="last_name" type="text" class="validate" />
          <label for="last_name">Last Name</label>
        </div>
        <div class="row">
          <div class="input-field">
            <select>
              {{#each roles}}
                <option value="{{id}}">{{description}}</option>
              {{/each}}
            </select>
            <label>Role</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field">
            <i class="material-icons prefix">phone</i>
            <input id="phone" type="tel" class="validate" />
            <label for="phone">Phone Number</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field">
            <i class="material-icons prefix">email</i>
            <input id="email" type="email" class="validate" />
            <label for="email">Email</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field">
            <i class="material-icons prefix">home</i>
            <input id="address" type="text" class="validate" />
            <label for="address">Address</label>
          </div>
        </div>
        <button
          class="btn waves-effect waves-light"
          type="submit"
          name="action"
        >Add Employee
        </button>
      </form>
    </div>
  </div>
  <div id="roles" class="row">
    {{#each roles}}
      <div class="card col l3 s6">
        <div class="card-content">
          <span class="card-title">{{description}}</span>
          <p>Salary: {{salary}}</p>
        </div>
        <div class="card-action">
          <a class="btn-floating btn-large waves-effect waves-light red"><i
              class="material-icons"
            >delete</i></a>
        </div>
      </div>
    {{/each}}
  </div>
</div>