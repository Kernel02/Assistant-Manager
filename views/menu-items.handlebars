<div class="center-align">
  <h2>Menu Items</h2>

  <div id="menu-items" class="center-align">
    {{! Existing Menu Items }}
    {{#if menuItems}}
      <ul class="menu-list carousel">
        {{#each menuItems}}
          <div class="card carousel-item">
            <div class="card-content">
              <li class="menu-item">
                <div class="item-header">
                  <span class="card-title item-name">{{name}}</span>
                  <p class="item-description">{{description}}</p>
                  <p class="item-price">Price: {{price}}</p>
                  {{#if ingredients}}
                    <div class="item-ingredients">
                      <h4>Ingredients:</h4>
                      <ul>
                        {{#each ingredients}}
                          <li>{{this}}</li>
                        {{/each}}
                      </ul>
                    </div>
                  {{/if}}
                  {{#if calories}}
                    <div class="item-nutrition">
                      <h4>Calories:</h4>
                      <p>{{calories}}</p>
                    </div>
                  {{/if}}
                </div>
              </li>
            </div>
            <div class="card-action">
              <a class="btn waves-effect waves-light orange accent-4"><i
                  class="material-icons"
                >delete</i></a>
              {{! Delete button }}
            </div>
          </div>
        {{/each}}
      </ul>
    {{else}}
      <p>No menu items found.</p>
    {{/if}}
  </div>
  <div class="divider"></div>
  {{! Form for Adding New Menu Items }}
  <form id="add-menu-item-form">
    <h3>Add New Menu Item</h3>
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required />
    </div>
    <div class="form-group">
      <label for="description">Description:</label>
      <textarea id="description" name="description" required></textarea>
    </div>
    <div class="form-group">
      <label for="price">Price:</label>
      <input type="number" step="0.01" id="price" name="price" required />
    </div>
    <div class="form-group">
      <label for="ingredients">Ingredients:</label>
      <textarea id="ingredients" name="ingredients"></textarea>
    </div>
    <div class="form-group">
      <label for="calories">Calories:</label>
      <input type="number" id="calories" name="calories" />
    </div>
    <button type="submit" class="btn btn-primary">Add Item</button>
  </form>
</div>