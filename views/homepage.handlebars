{{!-- homepage.handlebars --}}

{{! Extend the main layout }}
{{!< main}}

{{! Define the content for the body }}
{{#contentFor "body"}}
  <h2>Welcome to better restaurant management</h2>

  {{! Employee Information Section }}
  <section class="employee-info">
    <h3>Employee Information</h3>
    <p>Get detailed information about your employees and their roles.</p>
    <a href="/employee-information" class="btn btn-primary">View Employees</a>
  </section>

  {{! Menu Items Section }}
  <section class="menu-items">
    <h3>Menu Items</h3>
    <p>View current items on your menu.</p>
    <a href="/menu-items" class="btn btn-primary">View Menu</a>
  </section>

  {{! Employee Schedule Section }}
  <section class="employee-schedule">
    <h3>Employee Schedule</h3>
    <p>Stay organized with the employee schedule and shift management.</p>
    <a href="/employee-schedule" class="btn btn-primary">View Schedule</a>
  </section>

  {{! Inventory Management will go here if time permits }}

{{/contentFor}}